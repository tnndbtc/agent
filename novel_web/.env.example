# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
# For local development, use 0.0.0.0 to allow access from local network (mobile testing)
# Add your local IP address if needed (e.g., 192.168.1.100)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=novel_agent_db
DB_USER=novel_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# For SQLite (development only):
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Novel Agent Settings
MODEL_NAME=gpt-4o-mini
TEMPERATURE=0.7
MAX_TOKENS=2000
TOP_P=0.9
FREQUENCY_PENALTY=0.3
PRESENCE_PENALTY=0.3

# Scoring Weights (must sum to 100)
SCORING_STORY_PLOT_WEIGHT=30
SCORING_CHARACTER_DEV_WEIGHT=20
SCORING_WORLD_BUILDING_WEIGHT=15
SCORING_WRITING_STYLE_WEIGHT=20
SCORING_DIALOGUE_WEIGHT=10
SCORING_EMOTIONAL_IMPACT_WEIGHT=5

# File Storage
MEDIA_ROOT=/app/media
VECTOR_STORE_DIR=/app/media/vector_stores

# CORS Settings (for API access)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Security (Production Only)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Sentry (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn-here
